<?xml version="1.0" encoding="utf-8"?>
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL82Dialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">root123</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/atto</property>
        <!-- Drop and re-create the database schema on startup -->
        <property name="hbm2ddl.auto">update</property>
        <property name="show_sql">true
        </property>

        <!-- MAPPINGS -->
        <mapping class="com.company.entity.CardEntity"/>
        <mapping class="com.company.entity.TerminalEntity"/>
        <mapping class="com.company.entity.TransferEntity"/>

    </session-factory>

</hibernate-configuration>
